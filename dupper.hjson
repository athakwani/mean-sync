{
  ports: 
  [
    "35729:35729",
    "3000:3000",
    "9418:9418",
    "2222:22"
  ],  
  env:
  [
    "NODE_ENV=development",
    "PORT=3000"
  ],
  dependencies: 
  [
    {
      name: "linux-dependencies",
      cmd:
      '''
        apt-get -y install curl
        curl -sL  https://deb.nodesource.com/setup_4.x | bash -
        apt-get -y install mongodb nodejs daemon
      '''
    },
    {
      name: "nodejs-dependencies",
      cmd:
      '''
        npm install -g bower gulp
        cd $REPO_ROOT
        npm install
      ''',
      watch: "package.json"
    },
    {
      name: "bower-dependencies",
      cmd:
      '''
        cd $REPO_ROOT
        bower install --allow-root
      ''',
      watch: "bower.json"
    },
    {
      name: "sync-dependencies",
      cmd:
      '''
        apt-get -y install curl sudo inotify-tools openssh-server
        curl -sSL https://get.dupper.co/dev/index | sh
      '''
    }     
  ],
  commands: {
    deploy: [{
      server:
      '''
         service mongodb status > /dev/null 2>&1
         if [[ $? -ne 0 ]]
         then
            service mongodb start
         fi
        
         PORT=3000 start-stop-daemon -b --start --quiet --oknodo \
         --pidfile /var/run/gulp.pid -d $REPO_ROOT --exec /usr/bin/node \
         -- server.js
      '''
    },{
      client:
      '''
        echo "Waiting for server to start ....."
        while [ 1 ]; do
          wget -q --retry-connrefused --waitretry=1 --read-timeout=20 \
          --timeout=15 -t 0 --continue $SERVER_IP:3000 >/dev/null 2>&1
          if [ $? = 0 ]; then break; fi;
          sleep 2s;
        done;
        echo "Server started ....."

        os="$(uname -s)"
        if [[ $os == "Darwin" ]]; then
            open http://$SERVER_IP:3000/
        fi        
      '''    
    }],
    sync: [{
        server:
        '''
          if [ ! -f $HOME/.ssh/devenv ]
          then
            mkdir -p $HOME/.ssh
            ssh-keygen -q -t rsa -N "" -f "$HOME/.ssh/devenv"
            cat "$HOME/.ssh/devenv.pub" >> $HOME/.ssh/authorized_keys
          fi
         
          PRIVATEKEY="$(cat $HOME/.ssh/devenv)"
          _export PRIVATEKEY

          cp $REPO_ROOT/.gitignore $REPO_ROOT/.gutignore
          ulimit -n 9999
        
          service ssh status > /dev/null 2>&1
          if [[ $? -ne 0 ]]
          then
            service ssh start
          fi
        '''
      },{
        client:
        '''
          _verbose=0
          _path=""
          
          while [ "$#" -gt 0 ]
          do
            opt="$1"
            shift
            case "$opt" in
              --verbose|-v)
                _verbose=1
                ;;
              *)
                if [[ -z $_path ]]
                then
                  _path="$opt"
                fi
                ;;
            esac
          done          
                    
          if [[ $_path == "" ]]
          then
            echo "Usage: dupper exec $REPO_NAME devenv [--verbose | -v] PATH"
            exit 1
          fi

          command -v "dev" > /dev/null 2>&1
          if [[ $? -ne 0 ]]; then
            curl -sSL https://get.dupper.co/dev/index | sh
          fi
          
          echo "$PRIVATEKEY" > $HOME/.ssh/devenv
          
          mkdir -p $_path
          dev sync $([[ $_verbose -eq 1 ]] && echo "-v") -i $HOME/.ssh/devenv root@$SERVER_IP:2222:$REPO_ROOT $_path
        '''
    }]  
  }
}
